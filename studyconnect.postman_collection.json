{
    "info": {
        "_postman_id": "studyconnect-api-v1",
        "name": "StudyConnect API",
        "description": "Collection for testing StudyConnect Backend endpoints. Configuring to use automatic token handling.",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
        {
            "name": "Auth",
            "item": [
                {
                    "name": "Register User",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "var jsonData = pm.response.json();",
                                    "if (jsonData.status === 'success' && jsonData.data.token) {",
                                    "    pm.collectionVariables.set(\"token\", jsonData.data.token);",
                                    "    console.log(\"Token set automatically: \" + jsonData.data.token);",
                                    "}"
                                ],
                                "type": "text/javascript"
                            }
                        },
                        {
                            "listen": "prerequest",
                            "script": {
                                "exec": [
                                    "// Generate random user to avoid conflicts",
                                    "const randomId = Math.floor(Math.random() * 10000);",
                                    "pm.collectionVariables.set(\"randomId\", randomId);"
                                ],
                                "type": "text/javascript"
                            }
                        }
                    ],
                    "request": {
                        "method": "POST",
                        "header": [],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"username\": \"user{{randomId}}\",\n    \"email\": \"user{{randomId}}@test.com\",\n    \"password\": \"password123\"\n}",
                            "options": {
                                "raw": {
                                    "language": "json"
                                }
                            }
                        },
                        "url": {
                            "raw": "{{baseUrl}}/auth/register",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "auth",
                                "register"
                            ]
                        },
                        "description": "Registers a new user and automatically sets the 'token' variable for subsequent requests."
                    },
                    "response": []
                },
                {
                    "name": "Register (Failure - Missing Fields)",
                    "request": {
                        "method": "POST",
                        "header": [],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"username\": \"incompleteUser\"\n    // Missing email and password to trigger 400 Bad Request\n}",
                            "options": {
                                "raw": {
                                    "language": "json"
                                }
                            }
                        },
                        "url": {
                            "raw": "{{baseUrl}}/auth/register",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "auth",
                                "register"
                            ]
                        },
                        "description": "Intentionally fails with 400 Bad Request due to missing required fields. Satisfies Exercise 10.2 requirement for invalid data testing."
                    },
                    "response": []
                },
